
<div class="translucent-form-overlay">
  <form>
    <h3>New Profile</h3>
    <%= form_for(@profile) do |f| %>
      <div class="row columns">
        <%= f.label :provider %>
        <%= f.text_field :provider %>
      </div>
      <div class="row columns">
        <%= f.label :uid %>
        <%= f.text_field :uid %>
      </div>
      <div class="row columns">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="row columns">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
  </form>
</div>
  <div>
    <button type="button" class="button-round">
      <%= f.submit "Create Profile" %>
    </button>
  </div>
<% end %>
